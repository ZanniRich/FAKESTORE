									"    pm.expect(response).to.have.property('per_page');\r",
									"    pm.expect(response).to.have.property('total');\r",
									"    pm.expect(response).to.have.property('total_pages');\r",
									"    pm.expect(response).to.have.property('data').that.is.an('array');\r",
									"    pm.expect(response).to.have.property('support');\r",
									"});\r",
									"\r",
									"// Validate 'data' array elements\r",
									"response.data.forEach(user => {\r",
									"    pm.test(\"User has required properties\", function () {\r",
									"        pm.expect(user).to.have.property('id');\r",
									"        pm.expect(user).to.have.property('email').that.is.a('string');\r",
									"        pm.expect(user).to.have.property('first_name').that.is.a('string');\r",
									"        pm.expect(user).to.have.property('last_name').that.is.a('string');\r",
									"        pm.expect(user).to.have.property('avatar').that.is.a('string');\r",
									"    });\r",
									"});\r",
									"\r",
									"// Validate 'support' object properties\r",
									"pm.test(\"Support has required properties\", function () {\r",
									"    pm.expect(response.support).to.have.property('url').that.is.a('string');\r",
									"    pm.expect(response.support).to.have.property('text').that.is.a('string');\r",
									"});\r",
